# -----------------------------------------------------------------------------
# Infrastructure Versions
# -----------------------------------------------------------------------------
POSTGRES_VERSION=15.4-alpine
REDIS_VERSION=7-alpine
PGADMIN_VERSION=8
TRAEFIK_VERSION=v3.0
N8N_VERSION=1.22.1
NEXTCLOUD_VERSION=28-apache
ODOO_VERSION=17.0

# -----------------------------------------------------------------------------
# Network & Domain Configuration
# -----------------------------------------------------------------------------
BASE_DOMAIN=localhost
N8N_SUBDOMAIN=n8n
NEXTCLOUD_SUBDOMAIN=nextcloud
ODOO_SUBDOMAIN=odoo
PGADMIN_SUBDOMAIN=pgadmin
TRAEFIK_SUBDOMAIN=traefik

# -----------------------------------------------------------------------------
# Service Ports (host mapping when direct access needed)
# -----------------------------------------------------------------------------
POSTGRES_PORT=5432
PGADMIN_PORT=5050
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_REDIS=true
ENABLE_PGADMIN=true
ENABLE_PROMETHEUS=false
ENABLE_LOKI=false

# -----------------------------------------------------------------------------
# Database Names
# -----------------------------------------------------------------------------
POSTGRES_DB_N8N=n8n_db
POSTGRES_DB_NEXTCLOUD=nextcloud_db
POSTGRES_DB_ODOO=odoo_db